<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>
            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert">
                    <%=msg%> </div> 
            <% } %>

            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Nomor HP</th>
                    <th scope="col">Detail</th>
                  </tr>
                </thead>
                <tbody>
                <!-- cek apabila json kontak kosong -->
                <% if (contacts.length === 0) { %>
                    <tr>
                        <td colspan="4">
                        <div class="alert alert-danger fw-bold" role="alert">
                            Data Contact tidak ada !</div> 
                        </td>
                    </tr>
                <% } %>
                <!-- iterasi isi objek dalam array json -->
                <% contacts.forEach((contact,i) => { i++ %>
                    <tr>
                        <th scope="row"><%=i++%> </th>
                        <td><%= contact.nama%></td>
                        <td><%= contact.nomor%></td>
                        <td>
                            <a href="/contact/<%=contact.nama %> " class="btn btn-success badge badge-pill"><i class="bi bi-info-circle"></i>  details</a>
                        </td>
                      </tr>
                <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>