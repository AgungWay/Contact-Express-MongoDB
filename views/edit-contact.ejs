<div class="container mt-3">
  <div class="row">
      <div class="col-md-6">
          <h2>Form Edit Data Contact</h2>
          <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                  <ul>
                      <% errors.forEach(error => { %>
                       <li><%= error.msg %></li>
                      <% }) %>
                  </ul>
              </div> 
          <% } %>
          <form method="POST" action="/contact?_method=PUT">
            <input type="hidden" name="_id" value="<%=contact._id%>">
            <input type="hidden" name="oldNama" value="<%=contact.oldNama ||contact.nama%>">
              <div class="form-group">
                <label for="nama">Nama</label>
                <input type="text" class="form-control" id="nama" value="<%=contact.nama%>" name="nama" required>
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" value="<%=contact.email%>" name="email" required>
              </div>
              <div class="form-group">
                <label for="nomor">Nomor HP</label>
                <input type="text" class="form-control" id="nomor" value="<%=contact.nomor%>" name="nomor" required>
              </div>
              <button type="submit" class="btn btn-primary">Edit Data</button>
            </form>
      </div>
  </div>
</div>

